<root>
	<styles>
        <include src="file://{resources}/styles/custom_game/timer.css" />
	</styles>

	<scripts>
        <include src="file://{resources}/scripts/custom_game/timer.js" />
	</scripts>

    <Panel hittest="false" class="timer">
        <Panel id="top-left-flare" class="top-flare"></Panel>
        <Panel id="top-backdrop">
            <Panel id="top-backdrop-padding">
                <Panel id="timer-background">
                    <Panel id="timer-bar">
                    </Panel>
                </Panel>
                <Panel id="timer-clock">
                    <Panel id="timer-clock-handle-minute"></Panel>
                    <Panel id="timer-clock-handle-hour"></Panel>
                </Panel>
            </Panel>
        </Panel>
        <Panel id="top-right-flare" class="top-flare"></Panel>
    </Panel>
</root>


